.pull-left
  %ul.breadcrumb
    %li
      %a{:href => "#"} Categories
      %span.divider /
    - @crumbs.each do |c|
      %li
      %a{:href => "#"}= c.title  
      %span.divider / 
    %li.active= @category.title
%br
%br
  - @category.items.find(:all, :group => [:document]).each do |i|
    %br
    %li{:class => "icon-book items-name"}= link_to(i.title, i.document.to_s)
  - if @category.items.empty?
    %br
    %p{:class => "items-name"} Sorry, this category is empty
