= form_for @item, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :document, :class => 'control-label'
    .controls
      = f.text_field :document, :class => 'text_field'
  .control-group
    = f.label :category_id, :class => 'control-label'
    .controls
      = f.number_field :category_id, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), items_path, :class => 'btn'
